<Demo.SPA.Components.Loader Visible="@IsBusy"></Demo.SPA.Components.Loader>

@page "/products/add"

<div class="row my-2">
    <div class="col-12">
        <h3>Product</h3>
    </div>
</div>

@if (product != null)
{    
    <div class="row my-2">
        <div class="col-8">
            <Demo.SPA.Components.ProductDetail product="product"></Demo.SPA.Components.ProductDetail>
        </div>
    </div>

    <hr />

    <div class="row my-2">
        <div class="col-8">
            <button class="btn btn-primary" @onclick="Save">Save</button>
            <a class="btn btn-light" href="products">Back To Listing</a>
        </div>
    </div>
}
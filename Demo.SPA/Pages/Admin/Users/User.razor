<div class="row my-2">
    <div class="col-12 align-middle">
        <a class="btn oi oi-arrow-left d-inline" href="/admin/users" />
        <h3 class="d-inline">User</h3>
    </div>
</div>

@if (user != null)
{
    <EditForm Model="user" OnValidSubmit="Save">

        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" @bind-value="user.Name" class="form-control" placeholder="Name">

        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" @bind-value="user.Email" class="form-control" placeholder="Email">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Phone</label>
            <input type="text" @bind-value="user.Phonenumber" class="form-control" placeholder="Phone">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Role</label>
            <InputSelect TValue="string" @bind-Value="user.Role" class="form-control">
                @if (roles != null)
                    @foreach (var role in roles)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                }
            </InputSelect>
        </div>

        @*<div class="form-group">
                <label for="exampleInputEmail1">Active</label>
                <InputCheckbox @bind-Value="user.IsActive" DisplayName="Active"></InputCheckbox>
            </div>*@

        <hr />
        <div class="row my-2">
            <div class="col-12">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </div>

    </EditForm>
}